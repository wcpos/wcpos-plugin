{
  "name": "wcpos-plugin",
  "version": "1.0.0-beta",
  "description": "A simple front-end for taking WooCommerce orders at the Point of Sale.",
  "main": "index.js",
  "scripts": {
    "wp-env": "wp-env",
    "start": "wp-env start --xdebug=debug --debug",
    "stop": "wp-env stop",
    "cli": "wp-env run cli",
    "wp": "wp-env run cli wp",
    "pretest": "wp-env start --xdebug=coverage && wp-env run composer 'install --no-interaction'",
    "lint:php": "wp-env run composer run-script lint",
    "lint": "run-s lint:*",
    "test:unit:php": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/woocommerce-pos/.phpunit.xml.dist --verbose'",
    "test:unit": "run-s test:unit:*",
    "test": "run-s test:*",
    "postinstall": "composer install",
    "build:docs": "rm -rf hookdocs/ && jsdoc -c hookdoc-conf.json",
    "build:js": "NODE_ENV=production ./node_modules/.bin/webpack",
    "start:js": "./node_modules/.bin/webpack --watch",
    "precommit": "composer dump-autoload --no-dev",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wcpos/wcpos-plugin.git"
  },
  "keywords": [
    "wordpress",
    "woocommerce",
    "ecommerce",
    "point-of-sale"
  ],
  "author": "kilbot",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wcpos/wcpos-plugin/issues"
  },
  "homepage": "https://wcpos.com",
  "dependencies": {
    "@wordpress/api-fetch": "^5.2.1",
    "@wordpress/data": "^6.0.0",
    "@wordpress/element": "^4.0.0",
    "@wordpress/i18n": "^4.2.1",
    "@wordpress/url": "^3.2.1",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.14.8",
    "@svgr/webpack": "^5.5.0",
    "@types/fork-ts-checker-webpack-plugin": "^0.4.5",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/react": "^17.0.16",
    "@types/react-beautiful-dnd": "^13.1.1",
    "@types/react-dom": "^17.0.9",
    "@types/wordpress__components": "^14.0.3",
    "@types/wordpress__data": "^4.6.10",
    "@types/wordpress__url": "^2.14.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@wordpress/babel-plugin-makepot": "^4.2.0",
    "@wordpress/env": "^4.1.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^3.0.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.3.2",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jsdoc": "^3.6.7",
    "mini-css-extract-plugin": "^2.2.0",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "terser-webpack-plugin": "^5.1.4",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.7.2",
    "webpack-livereload-plugin": "^3.0.2",
    "wp-hookdoc": "^0.2.0"
  }
}
